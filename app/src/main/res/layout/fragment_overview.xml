<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">





    <TextView
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Welcome back,"
        android:paddingTop="20dp"
        />

    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/userTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="stranger"
        />

    <TextView
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Your total balance is:"
        android:paddingTop="20dp"
        />
    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/balanceTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="0.00 kr"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/income_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Add Income"
            android:background="@color/colorGreen"
            />

        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/outcome_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/colorRed"
            android:text="Add Outcome"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <Button
            android:layout_marginVertical="50dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/income_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="View Transaction History"
            android:layout_weight="1"
            />



    </LinearLayout>

    <Button
        android:id="@+id/change_user"
        android:paddingTop="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="change user"/>

    </LinearLayout>


</ScrollView>